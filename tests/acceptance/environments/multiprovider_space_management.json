{
    "dirs_config": {
        "cluster_manager": {
            "input_dir": "_build/default/rel/cluster_manager",
            "target_dir": "_build/default/rel/test_cluster"
        },
        "op_worker": {
            "input_dir": "_build/default/rel/op_worker",
            "target_dir": "_build/default/rel/test_cluster"
        },
        "cluster_worker": {
            "input_dir": "_build/default/rel/cluster_worker",
            "target_dir": "_build/default/rel/test_cluster"
        },
        "oz_worker": {
            "input_dir": "_build/default/rel/oz_worker",
            "target_dir": "_build/default/rel/test_cluster"
        },
        "onepanel": {
            "input_dir": "_build/default/rel/onepanel",
            "target_dir": "_build/default/rel/test_cluster"
        }
    },
    "os_configs": {
        "cfg0": {
            "storages": [],
            "users": [
                "u1",
                "u2"
            ],
            "groups": {
                "s1": [
                    "u1",
                    "u2"
                ],
                "fuse": [
                    "u1",
                    "u2"
                ]
            }
        },
        "cfg1": {
            "storages": [
                {
                    "type": "posix",
                    "name": "/mnt/st1"
                }
            ],
            "users": [
                "u1",
                "u2"
            ],
            "groups": {
                "s1": [
                    "u1",
                    "u2"
                ],
                "fuse": [
                    "u1",
                    "u2"
                ]
            }
        },
        "cfg2": {
            "storages": [
                {
                    "type": "posix",
                    "name": "/mnt/st2"
                }
            ],
            "users": [
                "u1",
                "u2"
            ],
            "groups": {
                "s1": [
                    "u1",
                    "u2"
                ],
                "fuse": [
                    "u1",
                    "u2"
                ]
            }
        }
    },
    "provider_domains": {
        "p1": {
            "db_driver": "couchdb",
            "os_config": "cfg1",
            "cluster_manager": {
                "cm1": {
                    "vm.args": {
                        "setcookie": "cookie1"
                    },
                    "sys.config": {
                        "cluster_manager": {
                            "cm_nodes": [
                                "cm1"
                            ],
                            "worker_num": 1
                        }
                    }
                }
            },
            "op_worker": {
                "worker1": {
                    "vm.args": {
                        "setcookie": "cookie1"
                    },
                    "sys.config": {
                        "op_worker": {
                            "cm_nodes": [
                                "cm1"
                            ],
                            "db_nodes": [
                                "dbnode1"
                            ],
                            "oz_domain": "oz1",
                            "verify_oz_cert": false
                        }
                    }
                }
            }
        },
        "p2": {
            "db_driver": "couchdb",
            "os_config": "cfg2",
            "cluster_manager": {
                "cm1": {
                    "vm.args": {
                        "setcookie": "cookie2"
                    },
                    "sys.config": {
                        "cluster_manager": {
                            "cm_nodes": [
                                "cm1"
                            ],
                            "worker_num": 1
                        }
                    }
                }
            },
            "op_worker": {
                "worker1": {
                    "vm.args": {
                        "setcookie": "cookie2"
                    },
                    "sys.config": {
                        "op_worker": {
                            "cm_nodes": [
                                "cm1"
                            ],
                            "db_nodes": [
                                "dbnode1"
                            ],
                            "oz_domain": "oz1",
                            "verify_oz_cert": false
                        }
                    }
                }
            }
        }
    },
    "zone_domains": {
        "oz1": {
            "db_driver": "couchdb",
            "cluster_manager": {
                "cm": {
                    "vm.args": {
                        "setcookie": "cookie3"
                    },
                    "sys.config": {
                        "cluster_manager": {
                            "cm_nodes": [
                                "cm"
                            ],
                            "worker_num": 1
                        }
                    }
                }
            },
            "oz_worker": {
                "node1": {
                    "vm.args": {
                        "setcookie": "cookie3"
                    },
                    "sys.config": {
                        "oz_worker": {
                            "cm_nodes": [
                                "cm"
                            ],
                            "db_nodes": [
                                "127.0.0.1:49161"
                            ],
                            "grpcert_domain": {
                                "string": "127.0.0.1"
                            },
                            "onepanel_rest_url": {
                                "protocol": "https",
                                "domain": "node1.p3",
                                "port": 9443
                            },
                            "openid_verify_cert": false,
                            "dev_mode": true
                        }
                    }
                }
            }
        }
    },
    "oneclient": {
        "client-host1": {
            "os_config": "cfg0",
            "clients": {
                "client1": {
                    "name": "client1",
                    "op_domain": "p1",
                    "zone_domain": "oz1",
                    "user_cert": "./cert.pem",
                    "user_key": "./cert.pem",
                    "mounting_path": "/home/u1/onedata",
                    "token_for": "u1",
                    "default_timeout": 40
                }
            }
        },
        "client-host2": {
            "os_config": "cfg0",
            "clients":{
                "client2": {
                    "name": "client2",
                    "op_domain": "p1",
                    "zone_domain": "oz1",
                    "user_cert": "./cert.pem",
                    "user_key": "./cert.pem",
                    "mounting_path": "/home/u2/onedata",
                    "token_for": "u2",
                    "default_timeout": 40
                }
            }
        }
    },
    "global_setup": {
        "users": {},
        "groups": {},
        "spaces": {}
    },
    "onepanel_domains": {
        "p3": {
           "app_name": "op_panel",
            "onepanel": {
                "node1": {
                    "vm.args": {
                        "setcookie": "cookie4"
                    },
                    "sys.config": {
                        "onepanel": {
                        }
                    }
                }
            }
        }
    }
